<grammar xmlns="http://relaxng.org/ns/structure/1.0">

  <start>
    <choice> 
      <ref name="control_center-network.vertex_alphabet"/>
      <ref name="substation-node_breaker.vertex_alphabet"/>
      <ref name="substation-network.vertex_alphabet"/>
      <ref name="substation-sel_network.vertex_alphabet"/>
    </choice>   
  </start>

  <define name="control_center-network.vertex_alphabet">
    <choice>
      <value>ccn:Firewall</value>
      <value>ccn:Host</value>
      <value>ccn:Network</value>
      <value>ccn:Switch</value>
    </choice>
  </define>

  <define name="substation-node_breaker.vertex_alphabet">
    <choice>
      <value>ssnb:Generator</value>
      <value>ssnb:Node</value>
      <value>ssnb:Breaker</value>
      <value>ssnb:Bus</value>
      <value>ssnb:Transformer</value>
    </choice>
  </define>

  <define name="substation-network.vertex_alphabet">
    <choice>
      <value>ssn:RTU</value>
      <value>ssn:BreakerControl</value>
      <value>ssn:Modem</value>
      <value>ssn:OvercurrentRelay</value>
      <value>ssn:DistanceRelay</value>
    </choice>
  </define>

  <define name="substation-sel_network.vertex_alphabet">
    <choice>
      <value>selss:ICON</value>
      <value>selss:3620</value>
      <value>selss:2730</value>
      <value>selss:3354</value>
      <value>selss:3530</value>
      <value>selss:311L</value>
      <value>selss:411L</value>
      <value>selss:487E</value>
      <value>selss:2100</value>
      <value>selss:451</value>
      <value>selss:421</value>
    </choice>
  </define>

</grammar>
